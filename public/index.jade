                            | O que você produra? Produtos, serviços ou eventos? Seja o que for, encontre facilmente através da pesquisa.
                      .extra.content
                        .center.aligned.author
                            button.ui.green.button(onclick="ui_openFilterSidebar();")
                                i.icon.filter                        
                                | Pesquisar
                    br
                #adsHistory.sharedAds.ui.grid
                    .sharedAdsHeader
                        .ui.equal.width.centered.padded.grid
                            .green.row
                                .colunm
                                    h4.ui.white.header
                                        i.inverted.eye.icon
                                        .content
                                            | Últimos Anúncios vistos
                    include templates/loader
                br
                br
                br
                br
            include templates/footer
        script.
            const qtdAdsToListByType = 3;
            if('serviceWorker' in navigator) {
                navigator.serviceWorker.register('/sw.js', { scope: '/' })
                .then(function(registration) {
                    console.log('Service Worker Registered');
                });
                navigator.serviceWorker.ready.then(function(registration) {
                    console.log('Service Worker Ready');
                });
            }
            ads_List_ListLastAdsOnDiv($('#adsLast'), qtdAdsToListByType, 'ad', 'timestamp', null);
            ads_List_ListLastAdsOnDiv($('#adsFarm'), qtdAdsToListByType, 'ad', 'category', 'fazendas');
            ads_List_ListLastAdsOnDiv($('#adsProducts'), qtdAdsToListByType, 'ad', 'category', 'produtos');
            ads_List_ListLastAdsOnDiv($('#adsServices'), qtdAdsToListByType, 'ad', 'category', 'servicos');
            ads_List_ListLastAdsOnDiv($('#adsEvents'), qtdAdsToListByType, 'ad', 'category', 'eventos');
            ads_List_ListInnerJoinAdsOnDiv($('#adsHistory'), qtdAdsToListByType, 'user_last_viewed_ads', 'ad');
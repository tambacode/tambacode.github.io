                                            | Novidades
                    include templates/loader
                #adsFarm.sharedAds.ui.grid
                    .sharedAdsHeader
                        .ui.equal.width.centered.padded.grid
                            .green.row
                                .colunm
                                    h4.ui.white.header
                                        i.inverted.star.outline.icon
                                        .content
                                            | Fazendas
                    include templates/loader
                #adsProducts.sharedAds.ui.grid
                    .sharedAdsHeader
                        .ui.equal.width.centered.padded.grid
                            .green.row
                                .colunm
                                    h4.ui.white.header
                                        i.inverted.tags.icon
                                        .content
                                            | Produtos
                    include templates/loader
                #adsServices.sharedAds.ui.grid
                    .sharedAdsHeader
                        .ui.equal.width.centered.padded.grid
                            .green.row
                                .colunm
                                    h4.ui.white.header
                                        i.inverted.handshake.outline.icon

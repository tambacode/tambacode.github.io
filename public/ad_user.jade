    body
        include templates/sideBar
        .pusher
            include templates/header
            #all
                br
                .ui.container                
                    form.ui.form.fluid.ad_user(onSubmit="return db_updateUserInfo();")
                        .field
                            label Nome
                            input(type="text" name="name" id="name" placeholder="Nome completo")
                        .field
                            label Email
                            input(type="email" name="email" id="email" placeholder="email")
                        .field
                            label Telefone
                            input(type="tel" name="phone" id="phone" placeholder="YYXXXXXZZZZ")
                        .field
                            label CEP
                            input(type="text" name="cep" id="cep" placeholder="XXXXXX-XXX")
                        .field
                            label Logradouro
                            input(input type="email" name="publicplace" id="publicplace" placeholder="Rua, Avenida, ...")
                        .field
                            label Numero
                            input(input type="text" name="number" id="number" placeholder="11")
                        .field
                            label Bairro
                            input(input type="text" name="district" id="district" placeholder="Bairro ...")
                        .field
                            label Complemento
                            input(input type="text" name="complement" id="complement" placeholder="KM12, Fazenda ...")
                        .field
                            label Localidade
                            input(input type="text" name="city" id="city" placeholder="SÃ£o Paulo")
                        .field
                            label UF
                            input(input type="text" name="state" id="state" placeholder="SAO ...")
                        .inline.field
                            .ui.checkbox
                                input(type="checkbox" name="terms" id="terms")
                                label Eu concordo com a politica e termos
                        .field
                            .ui.primary.submit.button Salvar
                            .ui.clear.button Limpar
                        .field
                            .ui.error.message
                include templates/home
                br
                br
            include templates/footer
        script(src='js/ad_user.js')
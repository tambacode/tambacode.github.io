html
    head
        title Shared.Farm
        
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link( rel="manifest" crossorigin="use-credentials" href="%PUBLIC_URL%/manifest.json")
        
        // Please don't use this type of comment >> // << because it is compiled in the HTML
        //- Use this one instead >> //- << because it does not compile in the HTML

        //- CSS
        include templates/styles
        
        //- Script
        include templates/scripts
    body
        include templates/sideBar
        .pusher
            include templates/header
            #all
                form.ui.form.fluid.ad_user
                    .ui.pointing.secondary.menu.flexh(id="tabnavigation")
                        .item.red.active(data-tab="basic") Básico
                        .item.blue(data-tab="address") Endereço
                        .item.green(data-tab="password") Senha
                    .ui.tab.segment.active(data-tab="basic")
                        .field
                            label Nome
                            input(type="text" name="fullname" placeholder="Nome completo")
                        .field
                            label Email
                            input(type="email" name="email" placeholder="email")
                        .field
                            label Telefone
                            input(type="tel" name="phone" placeholder="(XX) XXXX-XXXX")
                    .ui.tab.segment.address(data-tab="address")
                        .field
                            label CEP
                            input(type="text" name="cep" id="cep" placeholder="XXXXXX-XXX")
                        .field
                            label Logradouro
                            input(input type="email" name="publicplace" id="publicplace" placeholder="Rua, Avenida, ...")
                        .field
                            label Numero
                            input(input type="text" name="number" placeholder="11")
                        .field
                            label Bairro
                            input(input type="text" name="district" id="district" placeholder="Bairro ...")
                        .field
                            label Complemento
                            input(input type="text" name="complement" placeholder="KM12, Fazenda ...")
                        .field
                            label Localidade
                            input(input type="text" name="state" id="state" placeholder="São Paulo")
                        .field
                            label UF
                            input(input type="text" name="uf" id="uf" placeholder="SAO ...")
                    .ui.tab.segment(data-tab="password")
                        .field
                            label Senha
                            input(type="password" name="password" placeholder="digita sua senha")
                        .field
                            label Repetir
                            input(type="password" name="confirmpassword" placeholder="digita sua senha")
                        .inline.field
                            .ui.checkbox
                                input(type="checkbox" name="terms")
                                label Eu concordo com a politica e termos
                    .ui.primary.submit.button Salvar
                    .ui.clear.button Limpar
                    .ui.error.message
                include templates/home
                br
                br
            include templates/footer
        script(src='js/ad_user.js')
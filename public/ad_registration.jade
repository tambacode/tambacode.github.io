html
    head
        title Shared.Farm
        
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link( rel="manifest" href="manifest.json")
        
        // Please don't use this type of comment >> // << because it is compiled in the HTML
        //- Use this one instead >> //- << because it does not compile in the HTML

        //- CSS
        include templates/styles
        
        //- Script
        include templates/scripts
    body
        include templates/sideBar
        .pusher
            include templates/header
            #all
                form.ui.form(id='InsertAdRegistration')
                      .field
                        label Título
                        input(type='text', name='title', id='title' placeholder='Título do anúncio')
                      .field
                        label Preço R$
                        input(type='number', name='price', id='price' min="0.00" max="10000.00" step="0.01", , placeholder='Preço')
                                        
                        .inline.fields
                            label Categoria
                            .field
                                  .ui.radio.checkbox
                                        input(type='radio', name='category', id='products', value="produtos", checked="")
                                        label Produtos
                            .field
                                  .ui.radio.checkbox
                                        input(type='radio', name='category', id='services', value="servicos")
                                        label Serviços
                        .field
                        label Descrição
                        input(type='text', name='description', id='description', placeholder='Descrição')
                        .field
                        label Localização
                        input(type='text', name='location', id='location', placeholder='Localização')

                        .field
                        button.ui.button(id='InsertAdRegistration' onClick="db_InsertAdRegistration();") Cadastrar

                        include templates/footer